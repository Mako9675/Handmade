<div class='container'>
  <div class='row'>
    <div class="mx-auto col-sm-12 col-md-8 col-lg-9 my-5">
      <h1>下書き一覧 <i class="far fa-file"></i></h1>
      <table class='table table-hover table-inverse'>
        <thead>
          <tr>
            <th>タイトル</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
        <% @posts.each do |post| %>
          <tr>
            <td><%= image_tag post.get_post_image(100,100) %></td>
            <td><%= link_to post.title, post_path(post.id), class: "post_#{post.id}" %></td>
            <td><%= post.genre.name %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
    
    <%= render 'layouts/sidebar', genres: @genres %>
    
  </div>
</div>