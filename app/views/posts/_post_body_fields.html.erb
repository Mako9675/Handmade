<div class="nested-fields">
  <div class="row mx-auto">
    <%# link_to_add_associationのform_nameで指定した名前。(初期値 : f)  %>
      <div class="form-group col-12 my-3">
        <%= f.label :make_image, '作り方画像', class: "form-file-label" %>
        <%= f.file_field :make_image, class: "form-file-button make_image", accept: 'image/*' %>
      </div>
      
      <%= f.text_area :explanation, required: true, placeholder: "作り方", class: 'form-control col-8 ml-5' %>
      <% if body.errors.include?(:explanation) %>
        <p style="color: red;"><%= body.errors.full_messages_for(:explanation).first %>
      <% end %>
      
      <div class="col-3">
        <%= link_to_remove_association "フォームを削除", f %>
      </div>
        
  </div>
</div>