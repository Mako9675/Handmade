<div class="nested-fields">
  <div class="row mx-auto">
  
    <div class="form-group col-12 my-3">
      <%= f.label :make_image, '作り方画像', class: "form-file-label" %>
      <%= f.file_field :make_image, class: "form-file-button make_image", accept: 'image/*' %>
    </div>
    
    <div class="form-group col-12 mb-2">
      <%= f.text_area :explanation, required: true, placeholder: "作り方", class: 'form-control col-10 ml-4' %>
    </div>
    
    <div class="col-10 mb-2 text-right">
      <%= link_to_remove_association "フォームを削除", f %>
    </div>
      
  </div>
</div>