<div class='container'>
  <div class='row'>
    <div class="mx-auto col-7">
      <h2>新規会員登録</h2>

      <%= form_with model: [:public,@user], url: user_registration_path, id: 'new_user', class: 'new_user', local: true do |f| %>
        <% if @user.errors.any? %>
          <%= @user.errors.count %>件のエラーが発生しました
        <% end %>

      <div class="form-group">
        <%= f.label :name,'名前' %>
        <%= f.text_field :name, class: 'form-control' %>
        <% if @user.errors.include?(:name) %>
          <p style="color: red;"><%= @user.errors.full_messages_for(:name).first %>
        <% end %>
      </div>
  
       <div class="form-group">
        <%= f.label :email,'メールアドレス' %>
        <%= f.email_field :email, class: 'form-control', placeholder: "sample@example.com" %>
        <% if @user.errors.include?(:email) %>
          <p style="color: red;"><%= @user.errors.full_messages_for(:email).first %>
        <% end %>
      </div>

      <div class="form-group">
        <%= f.label :password,'パスワード(6文字以上)' %>
        <%= f.password_field :password, class: 'form-control' %>
        <% if @user.errors.include?(:password) %>
          <p style="color: red;"><%= @user.errors.full_messages_for(:password).first %>
        <% end %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation,'パスワード(確認用)' %>
        <%= f.password_field :password_confirmation, class: 'form-control' %>
        <% if @user.errors.include?(:password_confirmation) %>
          <p style="color: red;"><%= @user.errors.full_messages_for(:password_confirmation).first %>
        <% end %>
      </div>

      <div class="actions">
        <%= f.submit "新規登録", class: 'm-3 btn btn-success d-grid gap-2 col-3' %>
      </div>
      <% end %>
      <%= render "public/shared/links" %>
    </div>
  </div>
</div>