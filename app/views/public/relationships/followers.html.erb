<div class='container'>
  <div class='row'>
    <div class="mx-auto col-sm-12 col-md-8 col-lg-9 my-5">
      <h3>フォロワー一覧 <i class="fas fa-user"></i> <i class="fas fa-arrow-left"></i> <i class="fas fa-users"></i></h3>
      <table class='table table-hover table-inverse'>
        <thead>
          <tr>
            <th>ユーザー</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= user.name %></td>
              <td><%= link_to '会員ページ',public_user_path(user.id), class: "user_#{user.id} btn btn-info btn-sm" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    
  </div>
</div>