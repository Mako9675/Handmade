<div class='container'>
  <div class='row'>
    <div class="mx-auto col-sm-12 col-md-8 col-lg-9 my-5">
      <h3>フォロー一覧 <i class="fas fa-user"></i> <i class="fas fa-arrow-right"></i> <i class="fas fa-users"></i></h3>
      <table class='table table-hover table-inverse'>
        <thead>
          <tr>
            <th>ユーザー</th>
            <th colspan="1"></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= user.name %></td>
              <td><%= link_to '会員ページ',public_user_path(user.id), class: "user_#{user.id} btn btn-info btn-sm" %></td>
              <% if user_signed_in? && current_user.id != @user.id %>
                <td>
                  <div id="follow_btn_<%= @user.id %>">
                    <%= render "public/relationships/follow_bottan", user: @user %>
                  </div>
                </td>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
      
    <%= render 'layouts/sidebar', genres: @genres %>
    
  </div>
</div>