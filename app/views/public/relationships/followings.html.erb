<div class='container'>
  <div class='row'>
    
    <div class="mx-auto col-sm-12 col-md-9 col-lg-9 px-5 px-sm-0">
      <h5>フォロー一覧</h5><br/>
      <table class='table table-hover table-inverse'>
        <thead>
            <tr>
          <th>ユーザー</th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= user.name %></td>
              <td><%= link_to '会員ページ',public_user_path(user.id), class: "user_#{user.id}" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
      
    <%= render 'layouts/sidebar', genres: @genres %>
    
  </div>
</div>