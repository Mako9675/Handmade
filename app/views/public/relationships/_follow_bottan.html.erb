<div class = "m-1">
  <% if current_user.following?(user) %>
    <%= link_to "フォローを外す", public_user_relationships_path(user.id), method: :delete, class: "btn btn-primary btn-sm",remote: true %>
  <% else %>
    <%= link_to "フォローする", public_user_relationships_path(user.id), method: :post, class: "btn btn-success btn-sm",remote: true %>
  <% end %>
</div>
