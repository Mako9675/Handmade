<div class='container'>
  <div class='row'>
    <div class="mx-auto col-8 mt-4">
      <div class="text-center">
        <h2>プロフィール編集</h2>
      </div>
      
      <%= form_with model: [:public,@user],url: public_user_path, class: "form-inline", local:true do |f| %>
        <% if @user.errors.any? %>
          <%= @user.errors.count %>件のエラーが発生しました
        <% end %>
        
      <div class="form-group col-12 my-4">
        <%= f.label :name,'名前' %>
        <%= f.text_field :name, class: 'form-control col-sm-6 col-md-7',placeholder: "名前" %>
        <% if @user.errors.include?(:name) %>
          <p style="color: red;"><%= @user.errors.full_messages_for(:name).first %>
        <% end %>
      </div>
      
      <div class="form-group col-12 mb-4">
        <%= f.label :email,'メールアドレス' %>
        <%= f.email_field :email, class: 'form-control col-sm-6 col-md-7', placeholder: "sample@example.com" %>
        <% if @user.errors.include?(:email) %>
          <p style="color: red;"><%= @user.errors.full_messages_for(:email).first %>
        <% end %>
      </div>
      
      <div class="form-group col-12 mb-4">
        <%= f.label :introduction,class: 'text-center' do %>
          自己紹介<br>(200字以内)
        <% end %>
        <%= f.text_area :introduction, class: 'form-control col-sm-6 col-md-7',placeholder: "200字まで" %>
        <% if @user.errors.include?(:introduction) %>
          <p style="color: red;"><%= @user.errors.full_messages_for(:introduction).first %>
        <% end %>
      </div>
      
      <div class="form-group col-12 mb-4">
        <%= f.label :image, 'プロフィール画像', class: "form-file-label" %>
        <%= f.file_field :profile_image, class: "form-file-button user_image", accept: 'image/*' %>
      </div>
      
      <div class="form-group col-12 mb-4 text-center">
        <div class="col">
          <%= f.submit "編集内容を保存", class: 'btn btn-success' %>
          <%= link_to "退会する", public_user_unsubscribe_path(current_user), class: 'btn btn-danger' %>
        </div>
      </div>
      
       <% end %>
    </div>
  </div>
</div>
