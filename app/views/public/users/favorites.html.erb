<div class='container'>
  <div class='row'>
    <div class="mx-auto col-sm-12 col-md-8 col-lg-9 my-5">
      <h1>いいね一覧 <i class="fas fa-hand-holding-heart"></i></h1>
      <table class='table table-hover table-inverse'>
        <thead>
          <tr>
            <th colspan="1"></th>
            <th>タイトル</th>
            <th>ジャンル</th>
          </tr>
        </thead>
        <tbody>
        <% @favorite_posts.each do |post| %>
          <tr>
            <td><%= image_tag post.get_post_image(100,100) %></td>
            <td>
              <%= link_to post.title, post_path(post.id), class: "post_#{post.id}" %>
              <br>
              <br>作成:<%= link_to post.user.name,public_user_path(post.user.id) %>
              <br><%= post.created_at.strftime('%Y/%m/%d') %>
            </td>
            <td><%= post.genre.name %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
      
    </div>
    
    <%= render 'layouts/sidebar', genres: @genres %>
    
  </div>
</div>