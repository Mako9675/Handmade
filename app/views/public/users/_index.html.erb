<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th>ユーザー</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% users.each do |user| %>
      <tr>
        <td><%= link_to user.name, public_user_path(user.id), class: "user_#{user.id}" %></td>
      </tr>
    <% end %>
  </tbody>
</table>