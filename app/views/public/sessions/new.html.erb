<div class='container'>
  <div class='row'>
    <div class="mx-auto col-6 mt-2">
      <h2>ログイン</h2>

      <%= form_with model: [:public,@user], url: user_session_path, id: 'user', class: 'user form-inline', local: true do |f| %>
        <% if @user.errors.any? %>
          <%= @user.errors.count %>件のエラーが発生しました
        <% end %>
        <%= flash[:error] %>
      
      <div class="form-group col-12 mb-4">
          <%= f.label :name,'名前' %>
          <%= f.text_field :name, autofocus: true, autocomplete: "name", class: 'form-control' %>
        <% if @user.errors.include?(:name) %>
          <p style="color: red;"><%= @user.errors.full_messages_for(:name).first %>
        <% end %>
      </div>
      
      <div class="form-group col-12">
          <%= f.label :password,'パスワード' %>
          <%= f.password_field :password, autocomplete: "current-password", class: 'form-control' %>
        <% if @user.errors.include?(:password) %>
          <p style="color: red;"><%= @user.errors.full_messages_for(:password).first %>
        <% end %>
      </div>

      <div class="formn-group">
        <%= f.submit "ログイン", class: 'btn btn-primary' %>
      </div>
      
      <% end %>
      <%= render "public/shared/links" %>
    </div>
  </div>
</div>