<div class='container'>
  <div class='row'>
    
    <div class="mx-auto col-sm-12 col-md-9 col-lg-9 px-5 px-sm-0">
      <h1>Handmade.comへようこそ</h1>
      
      <h5>投稿いいねランキング</h5>
      <table class='table table-hover table-inverse'>
        <thead>
          <tr>
            <th></th>
            <th>タイトル</th>
            <th>ジャンル</th>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @post_like_ranks.each.with_index(1) do |post, i| %>
            <tr>
              <td>第<%= i %>位</td>
              <td><%= link_to post.title, post_path(post.id), class: "post_#{post.id}" %></td>
              <td><%= post.genre.name %></td>
              <td>コメント数: <%= post.comments.count %></td>
              <td>
                <i class="fas fa-heart" aria-hidden="true" style="color: red;"></i>
                <%= post.favorites.count %> いいね
              </td>
            </tr>
        </tbody>
      </table>
          <% end %>
        
    </div>
    
    <%= render 'layouts/sidebar', genres: @genres %>
    
  </div>
</div>
