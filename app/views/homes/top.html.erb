<div class='container'>
  <div class='row'>
    <div class="example col-12">
      <%= image_tag 'メイン画像.jpg', width: '100%' %>
      <h1>
        Handmade.comへ<br>
        ようこそ
      </h1>
    </div>
    
    <div class="mx-auto col-sm-12 col-md-8 col-lg-9">
      <h5>投稿いいねランキング</h5>
      <table class='table table-hover table-inverse'>
        <thead>
          <tr>
            <th></th>
            <th>タイトル</th>
            <th>ジャンル</th>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @post_like_ranks.each.with_index(1) do |post, i| %>
            <tr>
              <td class="text-center">
                <% case i when 1 %>
                  <i class="fas fa-crown" style='color: #ffd700;'></i> 第<%= i %>位
                <% when 2 %>
                  <i class="fas fa-crown" style='color: #c0c0c0;'></i> 第<%= i %>位
                <% when 3 %>
                <i class="fas fa-crown" style='color: #a0522d;'></i> 第<%= i %>位
                <% else %>
                <i class="fas fa-crown"></i> 第<%= i %>位
                <% end %>
              </td>
              <td><%= link_to post.title, post_path(post.id), class: "post_#{post.id}" %></td>
              <td><%= post.genre.name %></td>
              <td><i class="fas fa-comment"></i>コメント数: <%= post.comments.count %></td>
              <td>
                <i class="fas fa-heart" aria-hidden="true" style="color: red;"></i>
                <%= post.favorites.count %> いいね
              </td>
            </tr>
        </tbody>
        <% end %>
      </table>
        
    </div>
    
    <%= render 'layouts/sidebar', genres: @genres %>
    
  </div>
</div>
