<div class='container'>
  <div class='row'>
    <div class="mx-auto col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0">
      <h2>ログイン</h2>

      <%= form_with model: [:public,@user], url: user_session_path, id: 'user', class: 'user', local: true do |f| %>
        <% if @user.errors.any? %>
          <%= @user.errors.count %>件のエラーが発生しました
        <% end %>
        <%= flash[:error] %>
      
      <div class="field">
        <%= f.label :name,'名前' %><br />
        <%= f.email_field :name, autofocus: true, autocomplete: "name", class: 'form-control' %>
        <% if @user.errors.include?(:name) %>
          <p style="color: red;"><%= @user.errors.full_messages_for(:name).first %>
        <% end %>
      </div>
      
      <div class="field">
        <%= f.label :password,'パスワード' %><br />
        <%= f.password_field :password, autocomplete: "current-password", class: 'form-control' %>
        <% if @user.errors.include?(:password) %>
          <p style="color: red;"><%= @user.errors.full_messages_for(:password).first %>
        <% end %>
      </div>

      <div class="actions">
        <%= f.submit "ログイン", class: 'btn btn-primary' %>
      </div>
      
      <% end %>
      <%= render "public/shared/links" %>
    </div>
  </div>
</div>