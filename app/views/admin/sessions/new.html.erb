<div class='container'>
  <div class='row'>
    <div class="mx-auto col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0">
      <h2>ログイン</h2>

      <%= form_with model: [:public,@admin], url: admin_session_path, id: 'admin', class: 'admin', local: true do |f| %>
        <% if @admin.errors.any? %>
          <%= @admin.errors.count %>件のエラーが発生しました
        <% end %>
        <%= flash[:error] %>
      
      <div class="field">
        <%= f.label :name,'名前' %><br />
        <%= f.text_field :name, autofocus: true, autocomplete: "name", class: 'form-control' %>
        <% if @admin.errors.include?(:name) %>
          <p style="color: red;"><%= @admin.errors.full_messages_for(:name).first %>
        <% end %>
      </div>
      
      <div class="field">
        <%= f.label :email,'メールアドレス' %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
        <% if @admin.errors.include?(:name) %>
          <p style="color: red;"><%= @admin.errors.full_messages_for(:email).first %>
        <% end %>
      </div>
      
      <div class="field">
        <%= f.label :password,'パスワード' %><br />
        <%= f.password_field :password, autocomplete: "current-password", class: 'form-control' %>
        <% if @admin.errors.include?(:password) %>
          <p style="color: red;"><%= @admin.errors.full_messages_for(:password).first %>
        <% end %>
      </div>

      <div class="actions">
        <%= f.submit "ログイン", class: 'btn btn-primary' %>
      </div>
      
      <% end %>
    </div>
  </div>
</div>