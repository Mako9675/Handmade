<div class="container">
  <div class='row'>
    <div class="mx-auto col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0">
      <h1 class="my-3 ml-3"><%= @user.name%>さんの会員情報編集</h1>
      <%= form_with model: [:admin,@user], local:true do |f| %>
        <% if @user.errors.any? %>
          <%= @user.errors.count %>件のエラーが発生しました
        <% end %>
        
      <div class="form-group">
        <%= f.label :name,'名前' %>
        <%= f.text_field :name, class: 'form-control',placeholder: "名前" %>
        <% if @user.errors.include?(:name) %>
          <p style="color: red;"><%= @user.errors.full_messages_for(:name).first %>
        <% end %>
      </div>
      
      <div class="form-group">
        <%= f.label :email,'メールアドレス' %>
        <%= f.email_field :email, class: 'form-control', placeholder: "sample@example.com" %>
        <% if @user.errors.include?(:email) %>
          <p style="color: red;"><%= @user.errors.full_messages_for(:email).first %>
        <% end %>
      </div>
      
      <div class="form-group">
        <%= f.label :introduction,'自己紹介' %>
        <%= f.text_area :introduction, class: 'form-control',placeholder: "200字まで" %>
        <% if @user.errors.include?(:introduction) %>
          <p style="color: red;"><%= @user.errors.full_messages_for(:introduction).first %>
        <% end %>
      </div>
      
      <div class="form-group">
        <%= f.label :image %>
        <%= f.file_field :profile_image, class: "form-control-file user_image", accept: 'image/*' %>
        <% if @user.errors.include?(:profile_image) %>
          <p style="color: red;"><%= @user.errors.full_messages_for(:profile_image).first %>
        <% end %>
      </div>
      
      <label for="会員ステータス">会員ステータス</label>
      <%= f.radio_button :is_deleted, :false %>
      <%= f.label :is_deleted, "有効", {value: :fales} %>
      <%= f.radio_button :is_deleted, :true %>
      <%= f.label :is_deleted, "退会", {value: :true} %>
      
      <%= f.submit "編集内容を保存", class: 'btn btn-success' %>
      
      <% end %>
      
    </div>
  </div>
</div>
