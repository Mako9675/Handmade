<div class='container'>
  <div class='row'>
    
    <div class="mx-auto col-sm-12 col-md-8 col-lg-9 my-5">
      <h1>ユーザー一覧</h1>
      <table class='table table-hover table-inverse'>
        <tbody>
        <% @users.each do |user| %>
          <tr>
            <td class="img-admin-fit-radius"><%= image_tag user.get_profile_image(100,100) %></td>
            <td>
              <%= user.name %>
              <br>
              <br>登録日: <%= user.created_at.strftime('%Y/%m/%d') %>
            </td>
            <td><%= link_to '詳細ページへ',admin_user_path(user.id), class: "user_#{user.id} btn btn-info btn-sm" %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
    
    <%= render 'layouts/sidebar', genres: @genres %>
    
  </div>
</div>