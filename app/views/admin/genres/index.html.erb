<div class='container'>
  <div class='row'>
    
    <%= image_tag 'ジャンル.jpg', width: '100%' %>
    
    <div class="mx-auto col-8 my-5">
      <h1>ジャンル登録</h1>
      
      <h3>ジャンル一覧</h3>
        <table>
          <% @genres.each do |genre| %>
          <tr>
            <td>
              <%= genre.name %>
            </td>
            <td>
              <%= link_to edit_admin_genre_path(genre), class: 'btn btn-sm btn-success mx-2 ml-5' do %>
                <i class="fas fa-pen-fancy"></i> 編集
              <% end %>
              <%= link_to admin_genre_path(genre), method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger", remote: true do %>
                <i class="fas fa-trash-alt"></i> 削除
              <% end %>
            </td>
          </tr>
          <% end %>
        </table>
     </div>
     <div class="col-4 mt-5">
       <div class="form-inline">
        <%= form_with model: [:admin,@genre],local: true do |f| %>
          <%= f.label :name, 'ジャンル追加' %>
          <%= f.text_field :name, class: 'form-control' %>
          <%= f.submit '追加', class: 'btn btn-primary' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
