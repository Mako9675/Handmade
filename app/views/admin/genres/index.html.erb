<div class='container'>
  <div class='row'>
    <div class="mx-auto col-sm-8 col-md-8 col-lg-8 px-5 px-sm-0">
      <h1>ジャンル登録</h1>
      
      <h3>ジャンル一覧</h3>
        <table>
          <% @genres.each do |genre| %>
          <tr>
            <td>
              <%= genre.name %>
            </td>
            <td>
              <%= link_to '編集', edit_admin_genre_path(genre), class: 'btn btn-sm btn-primary mx-1' %>
              <%= link_to '削除',  admin_genre_path(genre), method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger", remote: true %>
            </td>
          </tr>
          <% end %>
        </table>
     </div>
     <div class="col-4 mt-5">
       <div class="genre_form">
        <%= form_with model: [:admin,@genre],local: true do |f| %>
          <%= f.label :name, 'ジャンル名' %>
          <%= f.text_field :name, class: 'form-control' %>
          <%= f.submit '追加', class: 'btn btn-primary' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
