<div class='container'>
  <div class='row'>
    
    <%= image_tag 'ジャンル.jpg', width: '100%' %>
    
    <div class="col-9 mx-auto my-5">
      <h1>ジャンル編集</h1>
      <%= form_with model: [:admin,@genre],class: "form-inline" , local: true do |f| %>
      <%= f.label :name, 'ジャンル名' %>
        <%= f.text_field :name, class: 'form-control col-8' %>
      
        <%= f.submit '保存', class: 'btn btn-primary ml-5' %>
        
      <% end %>
      
      <div class="my-5 text-right">
        <%= link_to "ジャンル一覧へ", admin_genres_path, class: "btn btn-sm btn-secondary" %>
      </div>
      
    </div>
  </div>
</div>

