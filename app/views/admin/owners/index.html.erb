<div class='container'>
  <div class='row'>
    
    <div class="mx-auto col-sm-12 col-md-8 col-lg-9 my-5">
      <h1>管理者一覧</h1>
      <table class='table table-hover table-inverse'>
        <tbody>
        <% @owners.each do |owner| %>
          <tr>
            <td class="img-admin-fit-radius"><%= image_tag owner.get_owner_image(100,100) %></td>
            <td>
              <%= owner.name %>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
      
      <%= paginate @owners, thema: 'twitter-bootstrap-4' %>
    </div>
    
  </div>
</div>