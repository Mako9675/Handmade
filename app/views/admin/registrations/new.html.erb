<div class='container'>
  <div class='row'>
    <div class="mx-auto col-8 mt-4">
      <div class="text-center">
        <h2>管理者作成</h2>
      </div>

      <%= form_with model: [:public,@admin], url: admin_session_path, id: 'admin', class: 'admin form-inline', local: true do |f| %>
        <% if @admin.errors.any? %>
          <%= @admin.errors.count %>件のエラーが発生しました
        <% end %>
        <%= flash[:error] %>
      
      <div class="form-group col-12 my-4">
        <%= f.label :name,'名前' %>
        <%= f.text_field :name, autofocus: true, autocomplete: "name", class: 'form-control col-sm-6 col-md-7' %>
        <% if @admin.errors.include?(:name) %>
          <p style="color: red;"><%= @admin.errors.full_messages_for(:name).first %>
        <% end %>
      </div>
      
      <div class="form-group col-12 md-4">
        <%= f.label :email,'メールアドレス' %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control col-sm-6 col-md-7' %>
        <% if @admin.errors.include?(:name) %>
          <p style="color: red;"><%= @admin.errors.full_messages_for(:email).first %>
        <% end %>
      </div>
      
      <div class="form-group col-12 mb-4">
        <%= f.label :password do %>
          パスワード<br>(6文字以上)
        <% end %>
        <%= f.password_field :password, class: 'form-control col-sm-6 col-md-7' %>
        <% if @admin.errors.include?(:password) %>
          <p style="color: red;"><%= @admin.errors.full_messages_for(:password).first %>
        <% end %>
      </div>
      
      <div class="form-group col-12 mb-4">
        <%= f.label :password_confirmation do %>
          パスワード<br>(確認用)
        <% end %>
        <%= f.password_field :password_confirmation, class: 'form-control col-sm-6 col-md-7' %>
        <% if @admin.errors.include?(:password_confirmation) %>
          <p style="color: red;"><%= @admin.errors.full_messages_for(:password_confirmation).first %>
        <% end %>
      </div>

      <div class="formn-group col-12">
        <%= f.submit "管理者作成", data: { confirm: '管理者を作成？' }, class: 'btn btn-primary btn-block col-6 mx-auto' %>
      </div>
      
      <% end %>
    </div>
  </div>
</div>