<div class="listings">
  <div class="listings_channels">
    <%= form_with(url: search_path, local: true, method: :get, class: "form-inline mb-3 mx-1") do |f| %>
      <%= f.text_field :keyword, placeholder: "投稿を検索する", class: "form-control col-9" %>
      <%= f.submit "検索", class: "btn btn-sm btn-success ml-1" %>
    <% end %>
    <table class="table table-bordered table-hover">
      <thead>
        <tr>
          <th class="text-center">ジャンル</th>
        </tr>
      </thead>
      <%= form_tag posts_path, method: :get, class: 'boards_searchForm' do %>
        <% genres.each do |genre| %>
        <tbody>
          <tr>
            <td><%= link_to genre.name, genres_path(id: genre.id) %></td>
          </tr>
        </tbody>
        <% end %>
      <% end %>
    </table>
  </div>
</div>