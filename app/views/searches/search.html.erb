<div class='container'>
  <div class='row'>
    
    <div class="mx-auto col-sm-8 col-md-8 col-lg-8 px-5 px-sm-0">
      <h4>検索結果</h4>
      <table class="table table-hover table-inverse">
        <tbody>
          <% @posts.each do |post| %>
            <tr>
              <td><%= link_to post.title, post_path(post.id), class: "post_#{post.id}" %></td>
              <td><%= post.genre.name %></td>
              <td>コメント数: <%= post.comments.count %></td>
              <td>
                <i class="fas fa-heart" aria-hidden="true" style="color: red;"></i>
                <%= post.favorites.count %> いいね
              </td>
            </tr>
          <% end %>
        </tbody>
          <% if @posts.size == 0 %>
            <p>検索結果がありませんでした</p>
          <% end %>
      </table>
    </div>
    
    <%= render 'layouts/sidebar', genres: @genres %>
    
  </div>
</div>